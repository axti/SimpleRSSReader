<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/feeditem_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/tv_feed_item_title"
    tool:text="Title"
    android:background="@drawable/feeditem_title_background"
    android:textColor="@android:color/white"
    android:padding="8dp"
    android:textStyle="bold"
    android:textSize="16sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_below="@+id/tv_feed_item_title"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_feed_item_description"
        android:textColor="#000"
        tool:text="Description"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView

        android:id="@+id/tv_feed_item_pubdate"
        android:layout_marginTop="8dp"
        tool:text="pub date"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
